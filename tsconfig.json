{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node",
    "watch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "incremental": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
}
